<section class="register">
    {{#if error}}
    <p class="error">{{error}}</p>
    {{/if}}
    <form action="/register" method="post">
        <div class="header">
            <h1>Register</h1>
        </div>
        <div class="form_content">
            <div><input type="text" placeholder="Username" name="username"></div>
            <div><input type="text" placeholder="Email Address" name="email"></div>
            <div><input type="password" placeholder="Password" name="password"></div>
            <div><input type="password" placeholder="Repeat Password" name="repeatPassword"></div>
            <button class="submit_btn">Register</button>
            <p>Already have an account? <a href="/login">Login</a></p>
        </div>
    </form>
</section>